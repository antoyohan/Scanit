<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_qr_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_scan"/>

    <RelativeLayout
        android:id="@+id/rl_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/view_gradient">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:drawableLeft="@drawable/photo"
                  android:drawablePadding="@dimen/drawable_padding"
                  android:padding="@dimen/save_padding"
                  android:text="@string/txt_scan_code"
                  android:textColor="@color/white"
                  android:textSize="@dimen/txt_save"/>
    </RelativeLayout>

</RelativeLayout>